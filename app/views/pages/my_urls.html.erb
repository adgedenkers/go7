<h1>My URLs</h1>

<%= render 'bouncers/bouncer_nav' %>

<table>
  <tr>
    <th width="200px">Title</th>
    <th width="30px">Chars</th>
    <th width="30px">Count</th>
		<th>Url</th>
    <th width="30px"></th>
    <th width="30px"></th>
  </tr>

<% @bouncers.each do |bouncer| %>
  <tr>
    <td><%= bouncer.title %></td>
		<td><%= bouncer.chars %></td>
		<td><%= bouncer.count %></td>
    <td><%= bouncer.url %></td>
    <td><%= link_to 'Show', bouncer %></td>
    <td><%= link_to 'Edit', edit_bouncer_path(bouncer) %></td>
  </tr>
<% end %>
</table>

